                    {% if 'Localisation' in columns %}<th>Localisation</th>{% endif %}
                    {% if 'Type' in columns %}<th>Type</th>{% endif %}
                    {% if 'Surface' in columns %}<th>Surface</th>{% endif %}
                    {% if 'Chambres' in columns %}<th>Chambres</th>{% endif %}
                    {% if 'Pi√®ces' in columns %}<th>Pi√®ces</th>{% endif %}
                    {% if 'Lien' in columns %}<th>Lien</th>{% endif %}
                </tr>
                {% for logement in logements.values() %}
                <tr>
                    <td>{{ logement.get('id', 'N/A') }}</td>
                    {% if 'Prix' in columns %}<td>{{ logement.get('Prix', 'Non renseign√©') }}</td>{% endif %}
                    {% if 'Localisation' in columns %}<td>{{ logement.get('Localisation', 'Non renseign√©') }}</td>{% endif %}
                    {% if 'Type' in columns %}<td>{{ logement.get('Type', 'Non renseign√©') }}</td>{% endif %}
                    {% if 'Surface' in columns %}<td>{{ logement.get('Surface', 'N/A') }} m¬≤</td>{% endif %}
                    {% if 'Chambres' in columns %}<td>{{ logement.get('Chambres', 'N/A') }}</td>{% endif %}
                    {% if 'Pi√®ces' in columns %}<td>{{ logement.get('Pi√®ces', 'N/A') }}</td>{% endif %}
                    {% if 'Lien' in columns %}
                        <td>
                            {% if logement.get('Lien') %}
                                <a href="{{ logement['Lien'] }}" class="link">Voir l'offre</a>
                            {% else %}
                                N/A
                            {% endif %}
                        </td>
                    {% endif %}
                </tr>
                {% endfor %}
            </table>
        {% endfor %}
    </div>
</body>
</html>
